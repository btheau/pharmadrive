<div class="container-fluid container-patient">
    <div class="col-4 p-4 center bg-white">
        <h2 class="text-center">Ajouter un patient</h2>
        <%= simple_form_for (@patient) do |f| %>
        <%= f.input :first_name %>
        <%= f.input :last_name %>
        <%= f.input :email %>
        <%= f.input :user_id %>
        <%= f.submit "Ajouter le patient", class: "btn btn-primary" %>
        <% end %>
    </div>
    </div>
