<% content_for :title, "Liste des patients" %>
<div class="container-fluid"  style="background-image: linear-gradient(rgba(0,0,0,0.2),rgba(0,0,0,0.2)), url(https://www.123freevectors.com/wp-content/original/131012-blue-and-white-triangle-geometric-background-illustration.jpg); background-size:cover;">
  <div class="noscroll  animated fadeIn">
  <div class="row text-center align-items-center d-inline">
    <h1 class="col-12 p-2 white">Mes patients
      <%= link_to  new_doctor_patient_path, method: :get do%>
      <div class="btn btn-p white">
        <p><i class="fas fa-plus"></i>
        Ajouter un patient</p>
      </div>
      <% end %>
    </h1>
    <div class="row justify-content-center">
      <div class="search-bar col-12 col-lg-6 mb-3" style='margin-right: 29px;'>
        <%= form_tag doctor_patients_path, method: :get do %>
        <%= text_field_tag :query,
        params[:query],
        class: "form-control",
          placeholder: "Rechercher un patient"
          %>

          <% end %>

        </div>

      </div>
      <div class="patients pt-2">
        <% @patients.each do |p| %>
          <%= link_to doctor_patient_path(p) do %>
          <div class="row justify-content-center">
            <div class="card-patient offset-3  col-lg-6"><span class="font15">
                  <%= p.last_name %>
                  <%= p.first_name %>
              </span>
              <% end %>
          </div>
      </div>
      <% end %>
    </div>
  </div>
</div>
</div>
