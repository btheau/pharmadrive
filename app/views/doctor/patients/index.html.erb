<div class="container-fluid">
    <div class="row text-center align-items-center">
      <h1 class="col-12 p-2">Patients</h1>
      <div class="search-barre col-6">
        <%= form_tag doctor_patients_path, method: :get do %>
          <%= text_field_tag :query,
            params[:query],
            class: "form-control",
            placeholder: "Rechercher un patient"
          %>
          <%= submit_tag "Rechercher", class: "btn btn-primary" %>
        <% end %>
      </div>
        <% @patients.each do |p| %>
        <%= link_to doctor_patient_path(p) do %>
        <div class="card-patient offset-3 col-6"><span class="font15">
                <%= p.last_name %>
                <%= p.first_name %>
                </span>
            <%= p.email %>
        <% end %>
        </div>
        <% end %>
    </div>
</div>
