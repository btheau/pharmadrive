<div class="container-fluid"  style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://previews.123rf.com/images/peshkova/peshkova1709/peshkova170901113/86804582-fond-d-%C3%A9cran-de-m%C3%A9dicament-de-capsule-bleu-abstrait-concept-de-m%C3%A9decine-de-pharmacie-et-de-sant%C3%A9-rendu-3d.jpg); background-size:cover;">
  <div class="noscroll  animated fadeIn">
  <div class="row text-center align-items-center d-inline">
    <h1 class="col-12 p-2 white">Mes patients
      <%= link_to  new_doctor_patient_path, method: :get do%>
      <div class="btn btn-p white">
        <p><i class="fas fa-plus"></i>
        Ajouter un patient</p>
      </div>
      <% end %>
    </h1>
    <div class="row justify-content-center">
      <div class="search-bar col-12 col-lg-6" style='margin-right: 19px;'>
        <i class="fa fa-search white pl-3 pt-2"></i>
        <%= form_tag doctor_patients_path, method: :get do %>
        <%= text_field_tag :query,
        params[:query],
        class: "form-control",
          placeholder: "Rechercher un patient"
          %>
          <% end %>
        </div>
      </div>
      <div class="patients pt-2">
        <% @patients.each do |p| %>
          <%= link_to doctor_patient_path(p) do %>
          <div class="row justify-content-center">
            <div class="card-patient offset-3  col-lg-6"><span class="font15">
                  <%= p.last_name %>
                  <%= p.first_name %>
              </span>
              <% end %>
          </div>
      </div>
      <% end %>
    </div>
  </div>
</div>
</div>
