<div class="container-fluid">
    <div class="row text-center align-items-center d-inline">
        <h1 class="col-12 p-2">Mes clients
                <%= link_to  new_doctor_patient_path, method: :get do%>
                <div class="btn btn-p">
                    <p><i class="fas fa-plus"></i>
                    Ajouter un patient</p>
                </div>
                <% end %>
                </h1>
        <div class="row justify-content-center mb-4">
            <div class="search-bar col-12 col-lg-6 fa fa-search" style='margin-right: 19px;'>
                <%= form_tag doctor_patients_path, method: :get do %>
                <%= text_field_tag :query,
            params[:query],
            class: "form-control",
            placeholder: "Rechercher un patient"
          %>
                <% end %>
            </div>
        </div>
        <div class="patients">
            <% @patients.each do |p| %>
            <%= link_to doctor_patient_path(p) do %>
            <div class="row justify-content-center">
                <div class="card-patient offset-3 col-12 col-lg-6"><span class="font15">
                        <ul class="menu">
                            <li class="item">
                                <%= p.last_name %>
                                <%= p.first_name %> -
                                <%= p.email %>
                            </li>
                    </span>
                    <% end %>
                    </ul>
                </div>
            </div>
            <% end %>
        </div>
    </div>
</div>
