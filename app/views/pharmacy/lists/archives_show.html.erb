<div class="noscroll">
  <div class="row text-center align-items-center d-inline">
    <h1 class="col-12 p-2"> Ordonnances de :  </h1>

    <div class="row justify-content-center mb-4">
      <div class="search-bar col-12 col-lg-6 fa fa-search" style='margin-right: 19px;'>
        <%= form_tag pharmacy_archives_show_path, method: :get do %>
        <%= text_field_tag :query,
        params[:query],
        class: "form-control",
          placeholder: "Rechercher une date ou mÃ©dicamment"
          %>
          <% end %>
        </div>
      </div>
      <div class="patients">

        <% @lists.each do |list| %>
               <%  if list.delivered?  %>
          <div class="row justify-content-center">

            <% if list.delivered? %>
            <div class="card-patient offset-3 col-12 col-lg-6"><span class="font15 d-flex justify-content-between px-2">
                  <div> <%= list.delivered_at.strftime("%d %B %Y") %> </div>
                  <div> <%= list.drugs.count %> prescriptions </div>
              </span>
          </div>
          <% end %>
      </div>
<% end %>
<% end %>
    </div>
  </div>
</div>
