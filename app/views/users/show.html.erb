<div class="row">
  <div class="col-12">
    <div class="card-stats">
      <%= current_user.name %> </div>
    </div>
    <br>
    <% if current_user.role == 'doctor' %>
    <div class="row-style">
      <div class="card-stats">
        <%= "Nombre de patients:" %>
        <br>
        <strong> <%= @user.patients.count %></strong>
      </div>
      <br>
      <div class="card-stats">
        <%= "Nombre d'ordonnances:" %>
        <br>
        <strong> <%= sumordos(@user.patients) %></strong>
      </div>
    </div>
    <div id="chart1" style="width:100%; height:400px;" data-daily2="<%= current_user.daily_patients.to_i %>" data-alltime="<%= current_user.average_patients  %>"></div>
  </div>
  <% else %>
  <div class="container-stats d-flex">
    <br>
    <div class="card-stats m-2">
      <%= "Ordonnances délivrées aujourd'hui:" %>
      <br>
      <strong> <%= sumlists(@user.lists).count %></strong>
    </div>
    <div class="card-stats m-2">
      <%= "Ordonnances délivrées au total:" %>
      <br>
      <strong> <%= current_user.lists.where.not(delivered_at: nil).count %></strong>
    </div>
    <div class="card-stats m-2">
      <%= "Temps de préparation en moyenne:" %>
      <br>
      <p>
        <strong> <%= current_user.average_time.to_i %></strong>
        <%= "min"  %>
      </p>
    </div>
    <div class="card-stats m-2">
      <%= "Temps de préparation en moyenne aujourd'hui:" %>
      <br>
      <p>
        <strong> <%= current_user.average_daily.to_i %>
      </strong>
      <%= "min"  %>
    </p>
  </div>
  <div id="chart" style="width:100%; height:400px;" data-average="<%= current_user.average_time.to_i %>" data-daily="<%= current_user.average_daily.to_i  %>"></div>

</div>
<% end %>


