<div class="row">
  <div class="col-12">
    <div class="card-stats-title">
      <%= current_user.name %> </div>
    </div>
    <br>
    <% if current_user.role == 'doctor' %>
    <div class="row-style">
      <div class="card-stats">
        <%= "Nombre de patients:" %>
        <br>
        <strong> <%= @user.patients.count %></strong>
      </div>
      <br>
      <div class="card-stats">
        <%= "Nombre d'ordonnances:" %>
        <br>
        <strong> <%= sumordos(@user.patients) %></strong>
      </div>
    </div>
    <div id="chart1" style="width:100%; height:400px;" data-daily2="<%= current_user.daily_patients.to_i %>" data-alltime="<%= current_user.average_patients  %>"></div>
  </div>
  <% else %>
  <div class="container-stats">
    <div class="row">
      <div class="col-3">
        <h4>Ordonnances délivrées aujourd'hui:</h4>
        <div class="card-stats">

          <%= sumlists(@user.lists).count %>
        </div>
      </div>
      <div class="col-3">
        <h4> Ordonnances délivrées au total:</h4>
        <div class="card-stats">
          <%= current_user.lists.where.not(delivered_at: nil).count %>
        </div>
      </div>
      <div class="col-3">
        <h4>Temps de préparation en moyenne:</h4>
        <div class="card-stats">


          <p>
            <%= current_user.average_time.to_i %>
            <%= "min"  %>
          </p>
        </div>
      </div>
      <div class="col-3">
        <h4> Temps de préparation aujourd'hui:</h4>
       <div class="card-stats">


        <p>
          <%= current_user.average_daily.to_i %>
          <%= "min"  %>
        </p>
      </div>
    </div>
  </div>
  <div class="graph">
  <div class="col-12">
    <div id="chart" style="width:100%; height:400px;" data-average="<%= current_user.average_time.to_i %>" data-daily="<%= current_user.average_daily.to_i  %>"></div>
  </div>
</div>
</div>
<% end %>


